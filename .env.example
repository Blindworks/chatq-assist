# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=chatq_assist
DB_USER=chatq
DB_PASSWORD=changeme

# OpenAI Configuration (EU compliance: use eu.api.openai.com when available)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_BASE_URL=https://api.openai.com/v1

# Security
JWT_SECRET=your-very-secure-256-bit-secret-key-minimum-32-characters-please-change-this

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:4200,http://localhost:80,https://yourdomain.com

# Application Settings
SERVER_PORT=8080
LOG_LEVEL=INFO
SQL_LOG_LEVEL=WARN

# RAG Settings
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=5
RAG_CONFIDENCE_THRESHOLD=0.7

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90

# Tenant (for multi-tenant setup)
TENANT_DEFAULT=default-tenant

# =====================================================
# Email Configuration (for handoff notifications)
# =====================================================

# Enable/Disable Email Sending
# Set to 'true' to enable email notifications, 'false' to only log to console
EMAIL_ENABLED=false

# SMTP Server Configuration
# For Gmail: smtp.gmail.com, Port 587
# For SendGrid: smtp.sendgrid.net, Port 587
# For Mailgun: smtp.mailgun.org, Port 587
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587

# SMTP Authentication
# For Gmail: Use your Gmail address and App Password (not your regular password)
#   1. Enable 2-Factor Authentication in your Google Account
#   2. Generate an App Password: https://myaccount.google.com/apppasswords
#   3. Use the 16-character App Password here (without spaces)
# For SendGrid: Use 'apikey' as username and your API key as password
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here

# Email Addresses
# Email address shown as sender in notification emails
EMAIL_FROM=noreply@chatq-assist.com

# Admin email address that receives handoff notifications
EMAIL_ADMIN=admin@chatq-assist.com

